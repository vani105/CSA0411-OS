#include <stdio.h>
#include <stdlib.h>

void sort(int arr[], int n) {
    for(int i=0; i<n-1; i++)
        for(int j=0; j<n-i-1; j++)
            if(arr[j] > arr[j+1]) {
                int temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
}

int main() {
    int n, head, disk_size, i, direction;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n], left[20], right[20];
    int l = 0, r = 0;

    printf("Enter request sequence:\n");
    for(i = 0; i < n; i++) scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &disk_size);

    printf("Enter direction (0 = left, 1 = right): ");
    scanf("%d", &direction);

    for(i = 0; i < n; i++) {
        if(req[i] < head)
            left[l++] = req[i];
        else
            right[r++] = req[i];
    }

    if(direction == 0)
        left[l++] = 0;
    else
        right[r++] = disk_size - 1;

    sort(left, l);
    sort(right, r);

    int total = 0, current = head;

    if(direction == 1) {
        for(i = 0; i < r; i++) {
            total += abs(current - right[i]);
            current = right[i];
        }
        for(i = l - 1; i >= 0; i--) {
            total += abs(current - left[i]);
            current = left[i];
        }
    } else {
        for(i = l - 1; i >= 0; i--) {
            total += abs(current - left[i]);
            current = left[i];
        }
        for(i = 0; i < r; i++) {
            total += abs(current - right[i]);
            current = right[i];
        }
    }

    printf("Total Head Movement = %d\n", total);
    return 0;
}
INPUT
Enter number of requests: 7
Enter request sequence:
82 170 43 140 24 16 190
Enter initial head position: 50
Enter disk size: 200
Enter direction (0 = left, 1 = right): 1
OUTPUT:
Total Head Movement = 389


}
