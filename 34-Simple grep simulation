// mygrep.c
#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[]) {
    if (argc < 3) { fprintf(stderr, "Usage: %s pattern filename\n", argv[0]); return 1; }
    const char *pat = argv[1];
    const char *fname = argv[2];
    FILE *f = fopen(fname, "r");
    if (!f) { perror("fopen"); return 1; }
    char line[1024];
    while (fgets(line, sizeof(line), f)) {
        if (strstr(line, pat)) printf("%s", line);
    }
    fclose(f);
    return 0;
}
INPUT:
Hello world
another line
Say Hello again
OUTPUT:
Hello world
Say Hello again
