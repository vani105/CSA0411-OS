// mysls.c
#include <stdio.h>
#include <dirent.h>
#include <sys/stat.h>
#include <string.h>

int main(int argc, char *argv[]) {
    int longopt = 0;
    if (argc>1 && strcmp(argv[1], "-l")==0) longopt = 1;
    DIR *d = opendir(".");
    if (!d) { perror("opendir"); return 1; }
    struct dirent *de;
    while ((de = readdir(d))) {
        if (!longopt) { printf("%s  ", de->d_name); }
        else {
            struct stat st;
            if (stat(de->d_name, &st)==0) {
                printf("%6ld %s\n", (long)st.st_size, de->d_name);
            } else printf("???? %s\n", de->d_name);
        }
    }
    if (!longopt) printf("\n");
    closedir(d);
    return 0;
}
OUTPUT:
    4096 .
    4096 ..
      123 file_manager
     2048 io_syscalls
