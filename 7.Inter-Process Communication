#include <stdio.h>
#include <unistd.h>    // for pipe(), fork(), read(), write()
#include <string.h>    // for strlen()
#include <sys/wait.h>  // for wait()

int main() {
    int fd[2];                // file descriptors for the pipe
    pid_t pid;
    char write_msg[] = "Hello from Child Process!";
    char read_msg[100];

    // Step 1: Create a pipe
    if (pipe(fd) == -1) {
        printf("Pipe creation failed!\n");
        return 1;
    }

    // Step 2: Create a child process
    pid = fork();

    if (pid < 0) {
        printf("Fork failed!\n");
        return 1;
    }

    // Step 3: Child Process
    else if (pid == 0) {
        close(fd[0]);  // Close unused read end
        write(fd[1], write_msg, strlen(write_msg) + 1);
        close(fd[1]);  // Close write end after sending message
    }

    // Step 4: Parent Process
    else {
        close(fd[1]);  // Close unused write end
        read(fd[0], read_msg, sizeof(read_msg));
        printf("Parent received message: %s\n", read_msg);
        close(fd[0]);  // Close read end
        wait(NULL);    // Wait for child to finish
    }

    return 0;
}

Output:
Parent received message: Hello from Child Process!
}
