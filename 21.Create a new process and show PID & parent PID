// fork_pid.c
#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>

int main() {
    pid_t pid = fork();
    if (pid < 0) {
        perror("fork");
        return 1;
    }
    if (pid == 0) {
        // child
        printf("Child: pid=%d, ppid=%d\n", getpid(), getppid());
    } else {
        // parent
        printf("Parent: pid=%d, child pid=%d, ppid=%d\n", getpid(), pid, getppid());
    }
    return 0;
}
